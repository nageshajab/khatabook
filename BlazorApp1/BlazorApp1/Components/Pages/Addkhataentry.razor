@page "/addkhataentry"
@using BlazorApp1.Data
@using BlazorApp1.Interfaces

@inject IKhataEntry KhataEntry;

<PageTitle>Khata book</PageTitle>

<h1>Hello, world!</h1>


<a href="/addkhataentry">Add New</a>

<table class='table'>
    <thead>
        <tr>
            <th>Id</th>
            <th>Date</th>
            <th>Title</th>
            <th>Description</th>
            <th>Bank</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var emp in khataEntries)
        {
            <tr>
                <td>@emp.Id</td>
                <td>@emp.Date</td>
                <td>@emp.Title</td>
                <td>@emp.Description</td>
                <td>@emp.Bank</td>
            </tr>
        }
    </tbody>
</table>


@code {
    private List<KhataEntry> khataEntries;

    protected override async Task OnInitializedAsync()
    {
        khataEntries = KhataEntry.GetEntry();
    }
}